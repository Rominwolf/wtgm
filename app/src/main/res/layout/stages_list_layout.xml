<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/viewTextRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/materialdesignicons"
            android:textColor="@color/plateTitle"
            android:textSize="64sp"
            android:layout_marginEnd="-8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/viewTextStageCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTitle"
            android:textSize="20sp"
            android:fontFamily="@font/source_bold"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="-10dp"/>
        <TextView
            android:id="@+id/viewTextStageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rogeTitle"
            android:textSize="20sp"
            android:fontFamily="@font/source_bold"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@id/viewTextStageCode"/>
        <TextView
            android:id="@+id/viewTextStageId"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/viewTextProbLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_prob_rate"
            android:textColor="@color/subTitle"
            android:layout_below="@id/viewTextStageTitle"
            android:textSize="16sp"
            android:fontFamily="@font/source_regular"/>
        <TextView
            android:id="@+id/viewTextProb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewTextStageTitle"
            android:layout_toEndOf="@id/viewTextProbLabel"
            android:textColor="@color/subTitle"
            android:textSize="16sp"
            android:fontFamily="@font/source_regular"/>
        <TextView
            android:id="@+id/viewTextAlgoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_sanity_index"
            android:textColor="@color/subTitle"
            android:layout_below="@id/viewTextStageTitle"
            android:layout_toEndOf="@id/viewTextProb"
            android:textSize="16sp"
            android:fontFamily="@font/source_regular"/>
        <TextView
            android:id="@+id/viewTextAlgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewTextStageTitle"
            android:layout_toEndOf="@id/viewTextAlgoLabel"
            android:textColor="@color/subTitle"
            android:textSize="16sp"
            android:fontFamily="@font/source_regular"/>
    </RelativeLayout>

</LinearLayout>
