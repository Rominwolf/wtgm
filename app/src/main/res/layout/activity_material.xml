<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MaterialActivity">

    <ImageView
        android:id="@+id/viewImageMaterialIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/material_icon"
        android:onClick="onClickSort"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewImageMaterialIcon"
        app:layout_constraintStart_toEndOf="@+id/viewImageMaterialIcon"
        app:layout_constraintTop_toTopOf="@+id/viewImageMaterialIcon">

        <TextView
            android:id="@+id/viewTextMaterialCode"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/source_bold"
            android:textColor="@color/rogeTitle"
            android:textSize="12sp"
            android:layout_marginTop="-8dp"/>
        <TextView
            android:id="@+id/viewTextMaterialName"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:textSize="24sp"
            android:textColor="@color/mainTitle"
            android:fontFamily="@font/source_bold"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-6dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/viewButtonStar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/viewImageMaterialIcon"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/viewImageMaterialIcon"
        android:background="@drawable/star"
        android:onClick="onClickStar"
        android:contentDescription="@string/star_this_material" />

    <TextView
        android:id="@+id/viewTextLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_stages_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewTextProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/plateTitle"
        android:text="@string/loading_stages_list_title"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/viewListStages"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="625dp"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewImageMaterialIcon" >
    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>